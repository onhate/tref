{
  "name": "@app/api",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    "./exports": {
      "types": "./dist/exports.d.ts"
    }
  },
  "scripts": {
    "types": "npx tsc --emitDeclarationOnly --noEmit false --declarationDir ./dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:auth:generate": "npx @better-auth/cli@latest generate --output ./src/auth/dbSchema.ts --config src/auth/auth.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "seeding=true npx tsx ./src/__seed__/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.907.0",
    "@aws-sdk/client-sesv2": "^3.907.0",
    "@aws-sdk/s3-presigned-post": "^3.907.0",
    "@aws-sdk/s3-request-presigner": "^3.907.0",
    "@hono/trpc-server": "^0.4.0",
    "@trpc/server": "^11.6.0",
    "@types/aws-lambda": "^8.10.155",
    "better-auth": "^1.3.27",
    "drizzle-orm": "^0.44.6",
    "handlebars": "^4.7.8",
    "hono": "^4.9.10",
    "keyv": "^5.5.3",
    "lodash": "^4.17.21",
    "pg": "^8.16.3",
    "pino": "^10.0.0",
    "superjson": "^2.2.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.27",
    "@faker-js/faker": "^10.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.7.1",
    "@types/pg": "^8.15.5",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.19.3",
    "vitest": "^3.2.4"
  }
}
